<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MiRestauranteApp"
             x:Class="MiRestauranteApp.MainPage"
             xmlns:sfList="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms">
  <sfList:SfListView x:Name="lstPlatillos">
    <sfList:SfListView.ItemTemplate>
      <DataTemplate>
        <TextCell Text="{Binding Nombre}" Detail="{Binding Descripcion}"></TextCell>
      </DataTemplate>
    </sfList:SfListView.ItemTemplate>
  </sfList:SfListView>
</ContentPage>